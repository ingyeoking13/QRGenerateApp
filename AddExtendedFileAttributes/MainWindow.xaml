<Window
    x:Class="AddExtendedFileAttributes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AddExtendedFileAttributes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Click="Button_Click" />
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="파일에 프로퍼티 더하기 :" />

                <TextBlock Text="프로퍼티 그룹" />
                <TextBox
                    x:Name="PropertyGroupTB"
                    MinWidth="100"
                    Margin="10,0,0,0" />
                <TextBlock Text="프로퍼티 이름" />
                <TextBox
                    x:Name="PropertyNameTB"
                    MinWidth="100"
                    Margin="10,0,0,0" />
                <TextBlock Text="프로퍼티 밸류" />
                <TextBox
                    x:Name="PropertyValueTB"
                    MinWidth="100"
                    Margin="10,0,0,0" />

            </StackPanel>
            <Button Click="Button_Click_1" Content="Click To Add Property" />
        </StackPanel>
    </Grid>
</Window>
